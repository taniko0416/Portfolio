
<div class="column">
<h2 class="column is-offset-one-quarter title is-2 has-text-info">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.fields_for :member do |f| %>
    <div class="field">
      <%= f.label :name, class: "column is-offset-one-quarter" %>
      <%= f.text_field :name, class: "input column is-half is-offset-one-quarter", placeholder: "name input" %>
    </div>
    <div class="field">
      <%= f.label :id, class: "column is-offset-one-quarter" %>
      <%= f.text_field :slug,class: "input column is-half is-offset-one-quarter",placeholder: "id input" %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, class: "column is-offset-one-quarter" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "input column is-half is-offset-one-quarter",placeholder: "Email input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "column is-offset-one-quarter" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input column is-half is-offset-one-quarter",placeholder: "password input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "column is-offset-one-quarter" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "input column is-half is-offset-one-quarter",placeholder: "password_confirmation input" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" ,class: "button is-link is-rounded column is-half is-offset-one-quarter" %>
  </div>
<% end %>

